
<!-- Header & Top Navigation -->			
	<%= render :partial => "navigation/header" %>	


<!-- Container: Playlistname-->		


<div id="content_thin">
<br /><br /><br />

<div class="main-top wrapper">	
		<div class="playlist_large">
			 Open in Spotify: <%= link_to truncate(h(@playlist.to_s), :length => 55), @playlist.url_spotify %>
		</div>
		
			<div class="playlist_actions">
			
				<div style="padding-top: 1px;float:left;margin-right:10px;">Share on Facebook:</div>
				<a name="fb_share" type="box_count" href="http://www.facebook.com/sharer.php" style="float:left;">Share</a>
				<script src="http://static.ak.fbcdn.net/connect.php/js/FB.Share" type="text/javascript"></script>
			
			
				<% unless @current_user_like %>
					<div id="like" style="padding:0px 0px 0px 0px;color:#666666;font-size:13px;font-weight:bold;" class="clearfix">
						<%= image_tag "fb_like_on.gif" %>
						<%= link_to "Like", likes_url(:playlist_id => @playlist.id), :class => "like_link", :method => :post %>
					</div>

				<% else %>
					<div id="like" style="padding:0px 0px 0px 0px;color:#666666;font-size:13px;font-weight:bold;" class="clearfix">
						<%= link_to("Unlike", like_url(@current_user_like), :confirm => "Are you sure you want to unlike this playlist?", :method => :delete, :class => "like_link") %>
					</div>
				<% end %>
		
			</div>
		
</div>


<!-- Container: Tracks & User-->		
<div class="main wrapper">

		<div class="track-listing">
			<h2>Playlist Tracks</h2>
		        <%= render :partial => "/playlists/track_listing.html.erb" %>
			</div>

	<div class="right">		
		<div class="user">
			<h2>User</h2>
				<div id="creator" style="padding: 10px">
					<%= render :partial => "/home/friend.html.erb", :locals => {:friend => @creator }%>
				</div>
				<div style="padding: 10px 10px 0px 10px;color:#666666;font-size:13px;font-weight:bold;">
					Added <%= time_ago_in_words @playlist.created_at %> by:
				</div>	
		</div>
			
		<div class="suggestions">
			<h2>Liked by</h2>
			<%= render :partial => "/users/portrait.html.erb", :collection => @liked_by %>
		</div>
	</div>	
		
</div>	
 

<!-- Footer & Bottom Navigation -->		
	<%= render :partial => "navigation/footer" %>	


