<!-- Header & Top Navigation -->			
<%= render :partial => "navigation/header" %>	

<div id="content">
  <div class="main-top wrapper">
    <br />
    <div id="user">
      <%= render :partial => "friend", :locals => {:friend => @profile_user}%>
    </div>
  </div>

  <div class="main wrapper home">
    <div class="playlists">
      <h2><%= fb_name @profile_user.uid, :useyou => "false", :firstnameonly => "true", :possessive => "true", :linked => "false" %> Playlists</h2>
      <%= render :partial => "playlist", :collection => @playlists %>
    </div>
			
    <div class="likes">
      <h2><%= fb_name @profile_user.uid, :useyou => "false", :firstnameonly => "true", :linked => "false" %> Likes</h2>
      <%= render :partial => "pic_playlist", :collection => @liked_playlists %>
    </div>
  </div>		

  <!-- Footer & Bottom Navigation -->		
  <%= render :partial => "navigation/footer" %>	
</div>
