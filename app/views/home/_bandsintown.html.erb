<% unless @events.empty? then %>
  <div>
    <% @events.each do |event| %>
      <div class="shows">
        <% artists = event.artists.map{|a| a.name}.join(", ") %>
        <%= link_to artists + (event.tickets_available? ? "" : " (no tickets)"), "#{event.ticket_url}?affil_code=heartb_#{@user.id}", :popup => true %>  					
     	
		<br />
		<span class="shows_date_venue">
        	<%= link_to (h event.datetime.strftime("%b %d")), "#{event.ticket_url}?affil_code=heartb_#{@user.id}", :popup => true %> Â· 		
        	<%= link_to (h event.venue.name), "#{event.ticket_url}?affil_code=heartb_#{@user.id}", :popup => true %>,   
			<%= link_to (h event.venue.city), "#{event.ticket_url}?affil_code=heartb_#{@user.id}", :popup => true %>  
		</span>

      </div>
    <% end %>
  </div>
<% end %>