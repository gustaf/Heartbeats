
<div class="friend clearfix">
	<div class="friend_pic"><%= fb_profile_pic friend.uid, :size => :square %></div>
	<div class="friend_details">
          <div class="friend_name"><%= link_to fb_name(friend.uid, {:useyou => "false", :linked => "false"}), friend %></div>
		<div class="friend_playlists">
			<%= render :partial => "/home/playlist.html.erb", :collection => friend.playlists[0..2] %>
                        <% if friend.playlists.count > 3 then %>
                          <div class="more playlists"><%= link_to "more", friend %></div>
                        <% end %>
		</div>
	</div>
</div>

