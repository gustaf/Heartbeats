<div class="main-top wrapper">
<!-- Add Playlist -->
			<div id="new_playlist">

				<script type="text/javascript">
					function submitform()
					{
		    		document.forms["new_playlist_form"].submit();
					}
					</script>
			
			 	<% form_for :playlist, @new_playlist, :url => playlists_url, :html => {:id => "new_playlist_form"} do |f| %>
					<%= f.text_field :url, :size => 62 %>
					<a href="javascript: submitform()" class="button"><span style="color: green;">♫ </span> Add Playlist</a>
				<% end %>

		
						
			<small><span style="color:#818181;">Example: http://open.spotify.com/user/gus/playlist/4NlgJdeq17Niy</span></small>
