
<link href="http://www.ourheartbeats.com/stylesheets/stylesheet.css" media="screen" rel="stylesheet" type="text/css" />

<!-- FACEBOOK USER INFO-->
<div id="content">
	<div id="username + logout"><%= h facebook_session.user.name %> <%= fb_logout_link "Sign Out", "signin" %></div>

	<br/><br/>

	<!-- ADD PLAYLIST -->
	<div id="main_form" class="form">
		<% form_tag "home/create" do %>
		  <div id="input_playlist"><%= text_field_tag :url %></div>
		  <div id="submit_playlist"><%= submit_tag "Add Playlist" %></div>
		<% end %>
	</div>
	<br/><br/>

	<!-- SHOW PLAYLIST -->
	<div id="my_playlists">
		My playlists:
		<% @my_playlists.each do |playlist| %>
			<div class="playlist"><%= playlist.updated_at %>: <%= h playlist.url_spotify %></div>
			<div><%= link_to 'Delete', :controller  => 'home', :action  => 'delete', :id => playlist.id %></div>
		<% end %>
	</div>
	<br/>
	<br/>
	<div id="friends">
		Friends' playlists:
		<%= render :partial => "friend", :collection => @friends_in_app %>
	</div>
</div>
